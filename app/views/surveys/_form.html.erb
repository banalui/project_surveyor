<%= form_for @survey do |f| %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control", placeholder: "eg. \"The personality test\"" %><%= form_field_error_messages(@survey, :title) %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control", rows: 4, placeholder: "eg. \"Discovering what is unique and special about all you crazy people\"" %><%= form_field_error_messages(@survey, :description) %>
	</div>

	<div class="form-group create-btn-wrapper">
		<%= f.submit "Create Survey and Begin Adding Questions", class: "create-button" %><br />
	</div>

<% end %>