<br><br>
<% @surveys.each_with_index do |survey, index| %>
	<h4><%= index + 1 %>.<%= survey.title %></h4>
	<p><%= survey.description %></p>
	<em><%= survey.response_count %> Responses</em><br><br>
	<div class="row">
		<div class="col-md-3">
			<form method="get" action="/surveys/<%= survey.id %>/participate">
				<button type="submit" class="btn btn-lg text-center">Take Survey</button>
			</form>
		</div>
		<div class="col-md-3">
			<form method="get" action="/surveys/<%= survey.id %>/result">
				<button type="submit" class="btn btn-lg text-center">View Results</button>
			</form>
		</div>
		<br><br><br>
	</div>
<% end %>
